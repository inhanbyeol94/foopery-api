{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \\\"{src,apps,libs,test}/**/*.ts\\\" --fix",
    "test": "dotenv -e .env.test jest",
    "test:watch": "dotenv -e .env.test jest --watch",
    "test:cov": "dotenv -e .env.test jest --coverage",
    "test:debug": "dotenv -e .env.test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -e .env.test prisma migrate reset -- --force && dotenv -e .env.test npm run e2e",
    "e2e": "jest --config ./test/_jest-e2e.json",
    "secret-seed": "ts-node prisma/secret-seed.ts",
    "db-mapping": "ts-node ./prisma/case-format.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.577.0",
    "@aws-sdk/client-ses": "^3.577.0",
    "@aws-sdk/client-sns": "^3.577.0",
    "@inhanbyeol/nestjs-dayjs": "^0.0.22",
    "@nestjs/cache-manager": "^2.1.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^4.0.2",
    "@nestjs/swagger": "^7.1.16",
    "@prisma/client": "^5.21.1",
    "axios": "^1.6.8",
    "bcrypt": "^5.1.1",
    "cache-manager": "^5.3.1",
    "chalk": "^4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.10",
    "dotenv-cli": "^7.4.1",
    "express-basic-auth": "^1.2.1",
    "fs": "^0.0.1-security",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^2.1.35",
    "nest-winston": "^1.9.6",
    "nestjs-cls": "^4.3.0",
    "node_cloudflare": "^0.0.6",
    "node-gzip": "^1.1.2",
    "prisma": "^5.21.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sharp": "^0.33.4",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mime-types": "^2.1.4",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.3.1",
    "@types/node-gzip": "^1.1.3",
    "@types/supertest": "^2.0.12",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma-case-format": "^2.2.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "src"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@common/(.*)$": "<rootDir>/src/_common/$1",
      "^@core/(.*)$": "<rootDir>/src/_core/$1",
      "^@management/(.*)$": "<rootDir>/src/_management/$1",
      "^@role$": "<rootDir>/src/role",
      "^src/(.*)$": "<rootDir>/src/$1"
    }
  }
}
